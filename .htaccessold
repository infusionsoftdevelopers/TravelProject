<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /travel/flights/

    # Allow PATH_INFO
    AcceptPathInfo On

    RewriteCond %{REQUEST_URI} ^/travel/flights/search/
    RewriteRule .* - [L]
    
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Try both if needed
    RewriteRule ^(.*)$ index.php/$1 [L]
    # RewriteRule ^(.*)$ index.php?/$1 [L]
</IfModule>
